{
  "compilerOptions": {
    "moduleResolution":"node",
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6",
      "es7",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}